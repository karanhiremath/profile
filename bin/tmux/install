#!/bin/bash

set -euo pipefail

shopt -s failglob


MACHINE="$(uname -s)"
ARCH="$(uname -m)"

. "${APP_BIN}/bin/sh/shell_fns --source-only"

echo "Installing tmux..."

case "${MACHINE}" in
    Mac)    brew install tmux;;
    *)      echo "Generic instructions not implemented"
esac

tmux_dir="${HOME}/.config/tmux"
mkdir -p "${tmux_dir}"
ln -fs ./tmux.conf "${tmux_dir}"
ln -fs ./tmux.conf "${HOME}/.tmux.conf"
