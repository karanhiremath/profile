FROM nixos/nix:latest

# Install basic utilities
RUN nix-env -iA nixpkgs.git nixpkgs.curl nixpkgs.bash nixpkgs.zsh

# Create a test user
RUN adduser -D -s /bin/bash testuser || useradd -m -s /bin/bash testuser

# Set up working directory
WORKDIR /home/testuser

# Copy the profile repository
COPY --chown=testuser:testuser . /home/testuser/profile

# Switch to test user
USER testuser

# Set environment variables
ENV PROFILE_DIR=/home/testuser/profile
ENV APP_BIN=/home/testuser/profile/bin

WORKDIR /home/testuser/profile

# Default command
CMD ["/bin/bash"]
