#!/bin/sh

msg='''
    __     __     __            __        __                     
  _|  \_  |  \   |  \          |  \      |  \                    
 /   $$ \  \$$\  | $$   __     | $$____   \$$  ______    ______  
|  $$$$$$\  \$$\ | $$  /  \    | $$    \ |  \ /      \  /      \ 
| $$___\$$   >$$\| $$_/  $$    | $$$$$$$\| $$|  $$$$$$\|  $$$$$$\
 \$$    \   /  $$| $$   $$     | $$  | $$| $$| $$   \$$| $$    $$
 _\$$$$$$\ /  $$ | $$$$$$\  __ | $$  | $$| $$| $$      | $$$$$$$$
|  \__/ $$|  $$  | $$  \$$\|  \| $$  | $$| $$| $$       \$$     \
 \$$    $$ \$$    \$$   \$$ \$$ \$$   \$$ \$$ \$$        \$$$$$$$
  \$$$$$$                                                        
    \$$                                                          
'''

fmt_msg="""
=============================================================================\n
===              $( date +'%a %Y-%m-%d %H:%H:%S | %s' )                    ===\n
${msg}
=============================================================================\n
